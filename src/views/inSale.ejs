<!DOCTYPE html>
<html lang="pt-br">
<!-- Include Head -->
<%- include('partials/head', {title: 'InÃ­cio' }) %>

    <body>
        <!-- Header -->
        <%- include('partials/headerNavbar') %>
            <!-- /Header -->

            <!-- Ofertas -->
            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="products-title">Ofertas</h2>
                    </div>
                    <% for (oferta of ofertas) { %>
                        <!-- Show the "in-sale" products -->
                        <div class="col-12 col-sm-6 col-lg-3">
                            <section class="product-box">
                                <a href="/products/detail/<%=oferta.id%>">
                                    <figure class="product-box_image">
                                        <img src="/images/products/<%=oferta.image%>" alt="imagem do produto">
                                    </figure>
                                    <article class="product-box_data">
                                        <h2>
                                            <%= oferta.price - ((oferta.price*oferta.discount)/100)%>
                                        </h2>
                                        <span>
                                            <%=oferta.discount%> % OFF
                                        </span>
                                        <p>
                                            <%=oferta.name%>
                                        </p>
                                        <i class="fas fa-truck"></i>
                                    </article>
                                </a>
                            </section>
                        </div>
                        <%}%>
                </div>
            </div>
            <!-- /Ofertas -->

            <!-- footer -->
            <%- include('partials/footer') %>
            <!-- /footer -->
    </body>

</html>