<!DOCTYPE html>
<html lang="pt-br">
<!-- Include Head -->
<%- include('partials/head', {title: 'Produto'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- product detail -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Detalhe do produto: <%=product.nome_prod%></h2>
				</div>
			</div>
			<div class="product-detail">
				<div class="row">
					<div class="col-12 col-lg-8">
						<img src="/images/products/<%=product.img%>" alt="product image" class="product-detail-img">
						<p class="product-detail-description">
							<%=product.descricao%>
						</p>
					</div>
					<div class="col-12 col-lg-4">
						<article class="product-detail-info">
							<h2 class="product-detail-title"><%=product.nome_prod%></h2>
							
								<p class="product-detail-price small">
									<span>$<%=product.preco%></span>
									/
									<b><%=product.desconto%>% OFF</b>
								</p>
								<p class="product-detail-price">
									$<%= product.preco - ((product.preco*product.desconto)/100)%>
								</p>
	
							<ul class="actions-list">
								<li>
									<i class="fas fa-credit-card"></i>
									<p>Pagar em 12 parcelas sem juros</p>
								</li>
								<li>
									<i class="fas fa-store"></i>
									<p>Retirada gratuita nas instalações do vendedor</p>
								</li>
							</ul>
	
							<a href="#" class="buy-now-button">COMPRAR AGORA</a>
							<hr>
	
							<a href="/products/edit/<%=product.id%>" class="action-button edit">EDITAR PRODUTO</a>
							<form action="/products/delete/<%=product.id%>?_method=DELETE" method="POST" style="display: inline-flex">
								<button type="submit" class="action-button delete">APAGAR</button>
							</form>
						</article>
					</div>
				</div>
			</div>
		</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>