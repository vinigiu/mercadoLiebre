<!DOCTYPE html>
<html lang="pt-br">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' + ''}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Você está editando: <i><%=produto.nome_prod%></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/edit/<%=produto.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="nome" class="form-label">Nome do produto:</label>
						<input type="text" id="name" name="nome" value="<%=produto.nome_prod%>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="preco" class="form-label">Preço do produto:</label>
						<input type="text" id="price" name="preco" value="<%=produto.preco%>"class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="desconto" class="form-label">Desconto:</label>
						<input type="text" id="discount" name="desconto" value="<%=produto.desconto%>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="categoria" class="form-label">Categoria:</label>
						<select name="categoria" id="category" class="form-input">
							<option value="">Escolhi</option>
							<option value="in-sale">Em oferta</option>
							<option value="visited" >Últimos adicionados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="descricao" class="form-label">Descrição:</label>
						<textarea name="descricao" id="description" class="form-input"><%=produto.descricao%></textarea>
					</div>
					<div class="col-12">
						<label for="fileImg" class="form-label">Imagem:</label>
						<input type="file" name="fileImg" id="fileImg" class="form-input"></input>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Salvar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos os produtos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>